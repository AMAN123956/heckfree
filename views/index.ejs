<!-- divs used for displaying messages passed on to ejs using res.render (rest is done below using jQuery) -->
<div id="updateMessage" style="display:none"><%= updateMessage %></div>

<!-- footer section -->
<%- include('footer'); -%>


<script>

  // jQuery code to display a toast message on recieving message through res.render 
  if (document.querySelector("#updateMessage").innerHTML != "") {
    $('#updateMessage')
      .toast({
        class: 'success',
        message: document.querySelector("#updateMessage").innerHTML
      })
      ;
  }

  // JS code to animate mobiles 
  const card1 = document.getElementById("card-one");
  const card2 = document.getElementById("card-two");
  const card3 = document.getElementById("card-three");
  setInterval(() => {
    card1.style.display = "none";
    card3.style.display = "none";
    card2.style.display = "block";
  }, 4000);
  setInterval(() => {
    card2.style.display = "none";
    card1.style.display = "none";
    card3.style.display = "block";
  }, 8000);
  setInterval(() => {
    card2.style.display = "none";
    card3.style.display = "none";
    card1.style.display = "block";
  }, 12000);

  // Jquery code to trigger following menu once the scrollbar passed #topContent section
  $(document).ready(function () {
    // fix menu when passed
    $("#topContent").visibility({
      once: false,
      onBottomPassed: function () {
        $(".fixed.menu").transition("fade in");
      },
      onBottomPassedReverse: function () {
        $(".fixed.menu").transition("fade out");
      },
    });
  });

  // JS code to convert username input to LowerCase
  let customLink = document.getElementById("customLink");
  setInterval(() => convertLowerCase(), 2000);
  function convertLowerCase() {
    customLink.value = customLink.value.toLowerCase();
  }


</script>
