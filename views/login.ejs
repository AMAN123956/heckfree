<%- include('header'); -%>

<style>
  #horizontalBar {
    display: none;
  }

  #verticalBar {
    display: flex;
  }

  @media only screen and (max-width: 700px) {
    #horizontalBar {
      display: flex;
    }

    #verticalBar {
      display: none;
    }
  }
</style>


<!-- login page from semantic ui example starts here -->
<div class="ui container" id="loginContainer">

  <div class="ui placeholder segment attached" style="padding: 60px 0;">
    <div class="ui two column stackable grid">
      <div class="column">
        <div class="ui form">
          <form action="/login" method="post">
            <div class="field">
              <label style="font-size: 1.2rem;">Username</label>
              <div class="ui left icon input">
                <input id="username" type="text" name="username" placeholder="Username" required>
                <i class="user icon"></i>
              </div>
            </div>
            <br>
            <div class="field">
              <label style="font-size: 1.2rem;">Password</label>
              <div class="ui left icon input">
                <input name="password" type="password" placeholder="Password" required>
                <i class="lock icon"></i>
              </div>
            </div>
            <button class="ui blue submit button">Login</button>
          </form>

        </div>
        <div class="ui bottom attached warning message"
          style="text-align:center;width:90%;max-width: 330px;;margin:0 auto; margin-top: 60px;">
          <i class="icon help"></i>
          Forgot password? <a href="/h/forgotpassword"> Reset here</a>
        </div>
        <div class="ui horizontal divider" id="horizontalBar" style="margin: 45px 0;">
          Or
        </div>

      </div>
      <div style="margin: auto;">
        <a href="/h/register" style="color: black;">
          <button class="ui button">
            <i class="signup icon"></i>
            Sign Up
          </button>
        </a>
      </div>
    </div>

    <div class="ui vertical divider" id="verticalBar">
      Or
    </div>
  </div>
</div>

<!-- login page form ends -->



<!-- divs used for displaying messages passed on to ejs using res.render (rest is done below using jQuery) -->
<div id="updateMessage" style="display:none"><%- updateMessage %></div>



<!-- Footer -->
<%- include('footer'); -%>

</body>

<script>
  // jQuery code to display a toast message on recieving message through res.render
  if (document.querySelector("#updateMessage").innerHTML != "") {
    $('#updateMessage')
      .toast({
        class: 'success',
        message: document.querySelector("#updateMessage").innerHTML
      })
      ;
  }

  // JS code to convert username input to LowerCase

  let username = document.getElementById("username");
  username.addEventListener("keyup", () => {
    localStorage.setItem("UserName", username);
  })

</script>

</html>